<windows:ResourceDictionary
    xmlns:windows="clr-namespace:System.Windows;assembly=PresentationFramework"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- Titles -->
    <system:String x:Key="MSG_TITLE_CONNECT_TO_DATABASE">Connect to Database</system:String>
    <system:String x:Key="MSG_TITLE_EXECUTE_SQL_COMMAND">Execute SQL Command</system:String>
    <system:String x:Key="MSG_TITLE_DISCONNECT_DATABASE">Disconnect from Database</system:String>

    <!-- Properties -->
    <system:String x:Key="Database_ConnectionString">Connection String</system:String>
    <system:String x:Key="Database_SqlCommand">SQL Command</system:String>

    <!-- Descriptions -->
    <system:String x:Key="DESC_Database_ConnectionString">Specifies the database connection string.</system:String>
    <system:String x:Key="DESC_Database_SqlCommand">Specifies the SQL command to be executed.</system:String>

</windows:ResourceDictionary>
